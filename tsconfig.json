{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./packages/server/dist",
    "rootDir": "./packages/server",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["**/*.spec.ts"]
}
